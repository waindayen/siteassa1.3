---

<section class="relative py-12 bg-gradient-to-br from-emerald-900 to-emerald-700">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <span class="inline-block text-emerald-300 font-medium tracking-wider text-sm mb-4">
          {project.category.toUpperCase()}
        </span>
        <h1 class="font-display text-4xl md:text-5xl font-bold text-white mb-6">
          {project.title}
        </h1>
        <p class="text-xl text-emerald-100 mb-8">
          {project.description}
        </p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
          {features.map(feature => (
            <div class="bg-white/10 backdrop-blur-md rounded-lg p-4">
              <div class="text-2xl mb-2">{feature.icon}</div>
              <div class="text-emerald-200 text-sm">{feature.label}</div>
              <div class="text-white font-medium">{feature.value}</div>
            </div>
          ))}
        </div>
        <div class="mb-8">
          <div class="flex justify-between text-sm text-emerald-100 mb-2">
            <span>{project.raised.toLocaleString('fr-FR')}‚Ç¨ collect√©s</span>
            <span>Objectif : {project.goal.toLocaleString('fr-FR')}‚Ç¨</span>
          </div>
          <div class="w-full bg-white/20 rounded-full h-2">
            <div
              class="bg-emerald-400 h-2 rounded-full"
              style={`width: ${project.progress}%`}
            ></div>
          </div>
        </div>
        <a
          href="#soutenir"
          class="inline-block bg-white text-emerald-800 px-8 py-4 rounded-full text-lg font-medium hover:bg-emerald-100 transition-colors duration-300"
        >
          Soutenir ce projet
          <span class="ml-2">‚Üí</span>
        </a>
      </div>
      <div class="relative">
        <img
          src={project.image}
          alt={project.title}
          class="rounded-xl shadow-2xl"
        />
      </div>
    </div>
  </div>
</section>

<section class="py-16 bg-white">
  <div class="max-w-4xl mx-auto px-4">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Le d√©fi</h2>
        <p class="text-gray-600">{project.details.challenge}</p>
      </div>
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Notre solution</h2>
        <p class="text-gray-600">{project.details.solution}</p>
      </div>
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">L'impact</h2>
        <p class="text-gray-600">{project.details.impact}</p>
      </div>
    </div>
  </div>
</section>