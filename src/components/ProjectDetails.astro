---
const { project } = Astro.props;

const features = [
  {
    icon: "üìç",
    label: "Lieu",
    value: project.location
  },
  {
    icon: "üìÖ",
    label: "D√©but",
    value: new Date(project.startDate).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long' })
  },
  {
    icon: "‚è≥",
    label: "Fin pr√©vue",
    value: new Date(project.endDate).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long' })
  },
  {
    icon: "üéØ",
    label: "Objectif",
